<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@android:color/black"
    android:layout_height="@dimen/uxsdk_60_dp">

    <ImageView
        android:id="@+id/connect_status_iv"
        android:layout_width="@dimen/uxsdk_22_dp"
        android:layout_height="@dimen/uxsdk_22_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/station_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/uxsdk_4_dp"
        android:gravity="center_vertical"
        android:textColor="@color/uxsdk_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/connect_status_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/connect_signal_iv"
        android:layout_width="@dimen/uxsdk_18_dp"
        android:layout_height="@dimen/uxsdk_18_dp"
        android:layout_marginRight="@dimen/uxsdk_4_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/connect_status_bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/uxsdk_setting_menu_rtk_divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>