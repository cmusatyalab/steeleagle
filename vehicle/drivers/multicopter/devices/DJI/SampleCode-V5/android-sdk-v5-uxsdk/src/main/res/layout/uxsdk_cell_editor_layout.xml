<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight"
    tools:parentTag="dji.v5.ux.core.base.DividerConstraintLayout"
    android:paddingRight="?android:attr/scrollbarSize">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/summary"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constrainedWidth="true"
        android:layout_marginBottom="@dimen/uxsdk_vertical_margin_minimal"
        android:layout_marginTop="@dimen/uxsdk_vertical_margin_minimal"
        android:ellipsize="marquee"
        android:fadingEdge="horizontal"
        android:singleLine="true"
        android:textColor="@color/uxsdk_dic_color_c6_gray"
        android:textSize="@dimen/uxsdk_dic_text_size_16sp"/>

        <TextView
            android:id="@+id/summary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/uxsdk_30_dp"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tips"
            android:gravity="center_vertical"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:maxLines="1"
            android:textColor="@color/uxsdk_dic_color_c8_white"
            android:textSize="@dimen/uxsdk_dic_text_size_18sp"/>

        <EditText
            android:id="@+id/editor"
            android:layout_width="@dimen/uxsdk_110_dp"
            android:layout_height="@dimen/uxsdk_30_dp"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toEndOf="@+id/tips"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/uxsdk_selector_white_round_rect"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:imeOptions="flagNoExtractUi|actionDone"
            android:inputType="number"
            android:maxLines="1"
            android:minWidth="80dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:textColor="@color/uxsdk_dic_color_c10_sea_blue"
            android:textSize="@dimen/uxsdk_dic_text_size_18sp"
            />

        <TextView
            android:id="@+id/tips"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toEndOf="@id/summary"
            app:layout_constraintBottom_toBottomOf="parent"
            android:minHeight="@dimen/uxsdk_30_dp"
            app:layout_constraintEnd_toStartOf="@+id/editor"
            android:layout_width="wrap_content"
            app:layout_constrainedWidth="true"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/uxsdk_horizontal_margin_medium"
            android:maxLines="1"
            android:textColor="@color/uxsdk_dic_color_c24_white_Transparent6"
            android:textSize="@dimen/uxsdk_dic_text_size_16sp"/>

</merge>
