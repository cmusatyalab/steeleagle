<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/uxsdk_50_dp"
    android:background="@color/gray">


    <ImageView
        android:id="@+id/iv_widget_icon"
        android:layout_width="@dimen/uxsdk_30_dp"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/uxsdk_ic_topbar_signal_level_2" />

    <TextView
        android:id="@+id/tv_widget_desc"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textColor="@color/uxsdk_white"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="@dimen/uxsdk_10_dp"
        app:layout_constraintStart_toEndOf="@id/iv_widget_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="测试数据" />


</androidx.constraintlayout.widget.ConstraintLayout>