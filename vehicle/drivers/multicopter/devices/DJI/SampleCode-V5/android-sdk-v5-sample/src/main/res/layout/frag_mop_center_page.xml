<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/uxsdk_white">

    <Button
        android:id="@+id/bt_open_mop_download_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Mop Upload/Down  Page"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_open_mop_interface_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Mop Interface Page"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_open_mop_download_page" />

</androidx.constraintlayout.widget.ConstraintLayout>