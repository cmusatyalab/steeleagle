<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <Button
        android:id="@+id/bt_set_operator_registration_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Set_Operator_Registration_Number" />

    <Button
        android:id="@+id/bt_get_operator_registration_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/bt_set_operator_registration_number"
        android:text="Get_Operator_Registration_Number" />

    <TextView
        android:id="@+id/tv_uas_european_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/bt_set_operator_registration_number"
        android:textColor="@color/red"
        tools:text="测试" />

</RelativeLayout>